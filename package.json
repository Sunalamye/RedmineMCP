{
  "name": "redmine-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Redmine - Works with Claude Code and OpenCode",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
